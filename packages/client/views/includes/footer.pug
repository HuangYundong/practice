script(src="/static/lib/jquery/jquery-3.3.1.min.js")
script(src="/static/js/main.js")
script.
  $(window).scroll(function() {
    const scrollTop = $(window).scrollTop();
    if (scrollTop > 100) {
      $('.back-top').fadeIn();
    } else {
      $('.back-top').fadeOut();
    }
  });

  $('.back-top').click(function() {
    $('html, body').animate({ scrollTop: 0 }, 300);
    return false;
  });
