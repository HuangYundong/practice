extends ../layout.pug

block content
  .content.has-bg
    .tab-list
      each item in [{ name: '全部', tag: 'all' }, { name: '精华', tag: 'good' }].concat(tabs)
        if currentTab === item.tag
          a.active(href="?tab=" + item.tag) #{item.name}
        else
          a(href="?tab=" + item.tag) #{item.name}
    include ./topic/list.pug
  aside.asider
    include ../includes/user_ranking.pug
    include ../includes/no_reply_topic.pug
    .block
      .title 友情社区
      ul.content
        each item in config.friend_link
          li
            a(href=item.link, target="_blank")
              img(src=item.logo)
