extends ../layout.pug

block content
  .content
    .tab-list
      each item in [{ name: '全部', tag: 'all' }, { name: '精华', tag: 'good' }].concat(tabs)
        a(href=`?tab=${item.tag}`, class={ active: currentTab === item.tag }) #{item.name}
    include ./topic/list.pug
  .aside
    if user
      include ../aside/user_info.pug
      include ../aside/create_topic.pug
    include ../aside/user_ranking.pug
    include ../aside/no_reply_topic.pug
    include ../aside/friend_link.pug

