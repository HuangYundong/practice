.block
  .title 作者信息
  .content
    a.avatar(href=`/user/${topic.author_id}`)
      img(src=`${config.API}/upload/${topic.author_avatar}`)
    a.nickname(href=`/user/${topic.author_id}`) #{topic.author_nickname}
    .score
      span 积分：#{topic.author_score}
    .signature
      span “ #{topic.author_signature || '这家伙很懒，什么都没留下'} ”
